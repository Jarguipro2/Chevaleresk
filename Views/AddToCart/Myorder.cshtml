@model IEnumerable<Chevaleresk.Models.Items>

@{
    ViewBag.Title = "Myorder";
    double sum = 0;
}

<h2>Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items_Type.Name)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            sum += item.Price;

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Items_Type.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdObject }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdObject }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdObject })
                </td>
            </tr>
        }

        <tr>
            <td>
                Total:  @sum
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                Votre panier est vide!
            </td>
        </tr>
    }

</table>
