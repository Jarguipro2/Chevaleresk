@model EFA_DEMO.Models.User_Inventory

@{
    ViewBag.Title = "Inventory";
}
<br />
    <h2 class="text-center" style="margin-top: 0 !important">Inventaire de @Model.User.FullName</h2>
    @Helper.ImageDisplay(Model.User.IdPlayer, Model.User.ToUserView().GetAvatarURL(), "inventoryAvatar center-block")


<table class="table">
    <tr>
        <th>
            Quantité
        </th>
        <th>
            Item
        </th>
    </tr>

    @foreach (var items in Model.ItemsQuantities)
    {
        <tr>
            <td>
                @items.Item2
            </td>
            <td>
                @items.Item1.Name
            </td>
        </tr>
    }

</table>
